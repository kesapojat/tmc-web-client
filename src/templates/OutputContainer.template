<section class='actions'>

    <i class='close'></i>

</section>

<h1 class='title'>Results</h1>

{{#unless status}}
    <p class='processing'>Processing...</p>
{{/unless}}

{{#if status}}

    <div class='progress-bar'>
        <div class='section-negative' style='width:{{percentage ratio.failed ratio.total}}%;' />
        <div class='section-positive' style='width:{{percentage ratio.passed ratio.total}}%;' />
    </div>

    <div class='results'>

        <div class='test-results'>

            {{#if passed}}

                <p>All tests passed.</p>

            {{else}}

                <p>{{ratio.failed}} / {{ratio.total}} tests failed.</p>

                <section class='details' style='display:none;'>
                    <ul>
                        {{#tests}}
                            <li>{{name}} â€“ {{message}}</li>
                        {{/tests}}
                    </ul>
                </section>

            {{/if}}

        </div>

        <div class='validation-results'>

            {{#if validations}}

                <p><em>{{validations.errorCount}}</em> validations <em class='negative'>failed</em>.</p>

                <section class='details' style='display:none;'>
                    {{#validations.results}}

                        <h4>{{name}}</h4>

                        <ul>
                            {{#messages}}
                                <li>Line {{line}}: {{message}}</li>
                            {{/messages}}
                        </ul>

                    {{/validations.results}}
                </section>

            {{else}}

                <p>All validations passed.</p>

            {{/if}}

        </div>

    </div>

{{/if}}
