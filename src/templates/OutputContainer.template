<section class='actions'>

    <i class='close'></i>

</section>

<h1 class='title'>Results</h1>

{{#unless status}}
    <p class='processing'>Processing...</p>
{{/unless}}

{{#if status}}

    <div class='progress-bar'>
        <div class='section-negative' style="width:{{ratio.fail}}%;" />
        <div class='section-positive' style="width:{{ratio.pass}}%;" />
    </div>

    <div class='results'>

        <div class='test-results'>

            {{#if passed}}

                <p>All tests passed.</p>

            {{else}}

                <ul>
                    {{#tests}}
                        <li>{{name}} â€“ {{message}}</li>
                    {{/tests}}
                </ul>

            {{/if}}

        </div>

        <div class='validation-results'>

            {{#if validations}}

                {{#validations}}

                    <h4>{{name}}</h4>

                    <ul>
                        {{#messages}}
                            <li>Line {{line}}: {{message}}</li>
                        {{/messages}}
                    </ul>

                {{/validations}}

            {{else}}

                <p>All validations passed.</p>

            {{/if}}

        </div>

    </div>

{{/if}}
